{
  "root": true,
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "globals": {
    "angular": true,
    "_": true,
    "io": true,
    "JQuery": true,
    "$": true,
    "expect": true,
    "should": true
  },
  "rules": {
    "one-var": 0,
    "func-names": 0,
    "no-underscore-dangle": 0,
    "one-var-declaration-per-line": 0,
    "global-require": 0,
    "new-cap": 0,
    "prefer-rest-params": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-extra-boolean-cast": 0,
    "prefer-arrow-callback": 0,
    "import/no-dynamic-require": 0,
    "no-plusplus": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "no-console": 0,
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ]
  }
}